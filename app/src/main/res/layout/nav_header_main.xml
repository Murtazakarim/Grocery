<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="top"
    android:orientation="vertical"
    android:paddingTop="15dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="top"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.Fonts.LatoBLack
                android:id="@+id/tv_header_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Hey User"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/black"
                android:textSize="18sp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/viewpa"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/green"
                android:orientation="horizontal"
                tools:ignore="InefficientWeight">

                <LinearLayout
                    android:id="@+id/my_orders"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".4"
                    android:background="@color/green"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/order" />


                    <com.Fonts.LatoBLack
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="@string/nav_order"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#eae3e3"
                        android:textSize="@dimen/text_size_X_small" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_reward"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".4"
                    android:background="@color/green"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/gift" />


                    <com.Fonts.LatoBLack
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/tv_toolbar_name"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#eae3e3"
                        android:textSize="@dimen/text_size_X_small" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_wallet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/space_4"
                    android:layout_weight=".4"
                    android:background="@color/green"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_account_balance_wallet_black_24dp" />


                    <com.Fonts.LatoBLack
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="@string/tv_app_name"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#eae3e3"
                        android:textSize="@dimen/text_size_X_small" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/my_cart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".4"
                    android:background="@color/green"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_shopping_cart_black_24dp" />


                    <com.Fonts.LatoBLack
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="@string/tv_cart_title"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#eae3e3"
                        android:textSize="@dimen/text_size_X_small" />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
